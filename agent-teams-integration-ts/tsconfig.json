{
  "include": ["src/*.ts", "src/*.json"],
  "exclude": ["node_modules", "dist"],
  "compilerOptions": {
      "incremental": true,
      "lib": ["ES2021"],
      "target": "ESNext",
      "module": "ESNext",
      "declaration": true,
      "sourceMap": true,
      "composite": true,
      "strict": true,
      "moduleResolution": "bundler",
      "esModuleInterop": true,
      "skipLibCheck": true,
      "forceConsistentCasingInFileNames": true,
      "resolveJsonModule": true,
      "rootDir": "src",
      "outDir": "dist",
      "tsBuildInfoFile": "dist/.tsbuildinfo"
  }
}
