{
  "TokenValidation": {
    "Enabled": true,
    "Audiences": [
      "{{BOT_CLIENT_ID}}"
    ],
    "TenantId": "{{BOT_TENANT_ID}}"
  },
  "AgentApplication": {
    "StartTypingTimer": true,
    "RemoveRecipientMention": false,
    "NormalizeMentions": false,
    "UserAuthorization": {
      "DefaultHandlerName": "auto",
      "AutoSignin": true,
      "Handlers": {
        "auto": {
          "Settings": {
            "AzureBotOAuthConnectionName": "logicapp",
            "Title": "Sign in",
            "Text": "Please sign in to chat with the bot."
          }
        }
      }
    }
  },
  "Workflow": {
    "AgentUrl": "{{LOGICAPP_AGENT_URL}}"
  },
  "Connections": {
    "ServiceConnection": {
      "Settings": {
        "AuthType": "ClientSecret",
        "ClientId": "{{BOT_CLIENT_ID}}",
        "TenantId": "{{BOT_TENANT_ID}}",
        "ClientSecret": "{{BOT_SECRET}}",
        "Scopes": [ "https://api.botframework.com/.default" ]
      }
    }
  },
  "ConnectionsMap": [
    {
      "ServiceUrl": "*",
      "Connection": "ServiceConnection"
    }
  ],
  "Logging": {
    "LogLevel": {
      "Default": "Information",
      "Microsoft.AspNetCore": "Warning"
    }
  }
}