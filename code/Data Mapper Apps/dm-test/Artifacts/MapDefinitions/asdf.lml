$version: 1
$input: XML
$output: XML
$sourceSchema: Source.xsd
$targetSchema: Source.xsd
$sourceNamespaces:
  ns0: http://tempuri.org/source.xsd
  xs: http://www.w3.org/2001/XMLSchema
$targetNamespaces:
  ns0: http://tempuri.org/source.xsd
  xs: http://www.w3.org/2001/XMLSchema
ns0:Root:
  DirectTranslation:
    $if(/ns0:Root/DirectTranslation/EmployeeID):
      EmployeeID: /ns0:Root/DirectTranslation/EmployeeName
  DataTranslation:
    Employee:
      $if(is-greater-than(/ns0:Root/DataTranslation/Employee/FirstName, /ns0:Root/DataTranslation/Employee/LastName)):
        FirstName: /ns0:Root/DataTranslation/Employee/LastName
      $if(/ns0:Root/CumulativeExpression/Population/State/Name):
        LastName: date(/ns0:Root/CumulativeExpression/Population/State/Name)
